<div class ="container">
  <div class = "row">
    <div class = "col">
      <h2>投稿一覧</h2>
    </div>
  </div>
  <% @posts.each do |post| %>
  <table class="table">
  <thead>
    <tr>
      <th scope="col">プロフィール写真</th>
      <th scope="col">ユーザーネーム</th>
      <th scope="col">タイトル</th>
      <th scope="col">内容</th>
      <th scope="col">詳細</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">
        <%= image_tag post.images[0],style: " height: 200px;object-fit:cover;" %>
      </th>
      <td><%= post.user.name %></td>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to "投稿詳細",admin_post_path(post.id) %></td>
    </tr>
  </tbody>
</table>
<% end %>
</div>