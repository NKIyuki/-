
<div class = "container">
  <div class = "row">
    <div class = "col mt-4">
      <h2>投稿内容</h2>
    </div>
  </div>
<%= form_with model:@post,url: post_path(@post.id),method: :patch do |f| %>
  <div class="form-group">
    <label for="formGroupExampleInput">タイトル</label><br>
      <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">内容</label><br>
    <%= f.text_area :content %>
  </div>
  <div class = "row">
    <div class = "col">
      <%= f.submit'編集内容を投稿' %>
    </div>
  </div>
 <% end %>
