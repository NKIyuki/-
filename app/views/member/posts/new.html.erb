<div class="flash-notifications">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: key) %>
  <% end %>
</div>

<div class = "container">
  <div class = "row">
    <div class = "col mt-5 mb-3">
      <h4>新規投稿</h4>
    </div>
  </div>
  <%= form_with model:@post,url: posts_path  do |f| %>
  <div class="form-group">
    <label for="formGroupExampleInput">タイトル</label>
      <div><%= f.text_field :title, size: "110x50" %></div>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">内容</label>
      <div><%= f.text_area :content,size:"110" %></div>
  </div>
  <div class = "row">
    <div class = "col mt-3 mb-3">
      <div class="field">
        <%= f.file_field :images, multiple: true %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col offset-9">
      <%= f.submit '投稿する',class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
