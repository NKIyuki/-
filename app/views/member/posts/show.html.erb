<h1>Member::Posts#show</h1>
<p>Find me in app/views/member/posts/show.html.erb</p>

<dic class = "container">
  <div class = "row">
    <div class = "col">
      <h4>タイトル</h4>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <h4><%=@post.title%></h4>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <%=@post.content%>
    </div>
    <div class = "row">
    <div class = "col">
        <%= image_tag @post.image, size: "200x200" %>
    </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
    <% if @post.user == current_user %>
      <td><%= link_to"投稿内容を編集する",edit_post_path(@post.id) %></td>
    <% else %>
      <td></td>
      <td></td>
    <% end %>
    </div>
  </div>
</dic>