<h1>Member::Posts#show</h1>
<p>Find me in app/views/member/posts/show.html.erb</p>

<div class = "container">
  <div class = "row">
    <div class = "col">
      <h4>タイトル</h4>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <h4><%=@post.title%></h4>
    </div>
  </div>
    <div class = "row">
      <div class = "col">
        <%if @post.images.present? %>
          <% if @post.images.attached? %>
            <% @post.images.each do |image| %>
              <%= image_tag image.variant(resize: '300x300') %>
            <% end %>
          <% end %>
        <% else %>
          <%= image_tag "no_images.png" %>
        <% end %>
      </div>
    </div>
  <div class = "row">
    <div class = "col">
      <%=@post.content%>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <h6>コメント<%=@post.comments.count %></h6>
    </div>
  </div>
  <% @post.comments.each do |comment| %>
  <div class = "row">
    <div class = "col">
      <%= image_tag comment.user.get_profile_image(100,100) %>
      <%= comment.user.name %>
      <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.content %>
    </div>
  </div>
  <% end %>
  <div class = "row">
    <div class = "col">
      <%= form_with model:[@post,@comment] do |f| %>
        <%= f.text_area :content,rows:'2',placeholder:"コメントする" %>
        <%= f.submit "コメント投稿" %>
      <% end %>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
    <% if @post.user == current_user %>
      <td><%= link_to"投稿内容を編集する",edit_post_path(@post.id) %></td>
    <% else %>
      <td></td>
      <td></td>
    <% end %>
    </div>
  </div>
</dic>