<div class = "container">
  <div class = "row">
    <div class = "col">
      <h4><%=@post.title %></h4>
    </div>
  </div>
  <div class = "row">
      <% @post.images.each do |image| %>
        <div class="col-3">
          <%= image_tag image,class: "w-100" %>
        </div>
        <% end %>
    </div>
  <div class = "row">
    <div class = "col">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th scope="row">
              <%= image_tag @comment.user.get_profile_image(50,50) %>
              <%= @comment.user.name %>
            </th>
            <td>
              <%= @comment.content %>
            </td>
            <tb>
            </tb>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <%= link_to "コメント削除",post_comment_path(@post.id, @comment.id),method: :delete,style: "color: black;" data: { confirm: '本当に削除しますか？' } %>
    </div>
  </div>
</div>