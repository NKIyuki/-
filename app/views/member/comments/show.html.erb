<div class = "container">
  <div class = "row">
    <div class = "col">
      <h4><%=@post.title %></h4>
    </div>
  </div>
  <div class = "row">
      <% @post.images.each do |image| %>
        <div class="col-3">
          <%= image_tag image,class: "w-100" %>
        </div>
        <% end %>
    </div>
  <div class = "row">
    <div class = "col">
      <table class="table">
  <thead>
    <tr>
      <th scope="col">ユーザー画像</th>
      <th scope="col">ユーザネーム</th>
      <th scope="col">コメ</th>
      <th scope="col">削除する</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= image_tag @comment.user.get_profile_image(50,50) %></th>
      <td><%= @comment.user.name %></td>
      <td><%= @comment.content %></td>
      <td><%= link_to "コメント削除",post_comment_path(@post.id, @comment.id),method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
    </tr>
  </tbody>
</table>