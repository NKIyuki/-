<div class = "container" >
  <div class = "row">
    <div class = "col-5 offset-1">
      <p><h2>ログイン</h2></p>
    </div>
  </div>
  <div class = "row">
    <div class = "col-6 offset-2">
    </div>
  </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class = "row">
    <div class = "col-7 offset-3">
      <div class="row">
        <div class = "col-3 ">
          <p><%= f.label :email, "メールアドレス" %></p>
        </div>
        <div class = "col-4 ">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
      <div class="row">
        <div class = "col-3 ">
          <p><%= f.label :password,"パスワード" %></p>
        </div>
        <div class = "col-4 ">
           <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col-6 offset-5">
      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>
    </div>
    <div class = "col offset-5">
      <div class="actions">
       <p> <%= f.submit "ログイン" , style: "button", class: "btn btn-outline-info" %></p>
      </div>
    </div>
  </div>
<% end %>

<div class = "row">
  <div class = "col-6 offset-2">
    <h6>会員登録がお済みでない方は
    <%= link_to "こちら",new_user_registration_path %>からログインください。</h6>
  </div>
</div>
</div>