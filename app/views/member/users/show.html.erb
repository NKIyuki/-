

<div class = "container">
  <div class = "row">
    <div class = "col">
      <h2>
        <%= link_to edit_user_path do %>
        <%= image_tag @user.get_profile_image(200, 200),class: "img-thumbnail" %>
        <% end %>
      </h2>
      <h2><%= link_to @user.name,edit_user_path,style: "color: black;" %></h2>
    </div>
  </div>
  <% @posts.each do |post| %>
  <div class = "row">
    <div class = "col">
      <div class="card mb-3">
          <%= link_to post_path(post.id) do %>
            <%if post.images.present? %>
              <% if post.images.attached? %>
                <% post.images.each do |image| %>
                  <%= image_tag image.variant(resize: '200x200') %>
                <% end %>
              <% end %>
            <% else %>
              <%= image_tag "no_images.png" %>
              <% end %>
            <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title,post_path(post.id),style: "color: black;" %></h5>
            <p class="card-text"><%= post.content %></p>
            <p class="card-text">
              <small class="color: black">
                <%= link_to "#{post.comments.count}„Ç≥„É°„É≥„Éà",post_path(post.id) %>
                üëç<%= post.favorites.count %>
              </small>
            </p>
          </div>
      </div>
<% end %>
</div>