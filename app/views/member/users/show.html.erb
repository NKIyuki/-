

<div class = "container">
  <div class = "row">
    <div class = "col">
      <h2>マイページ</h2>
      <h2>
        <%= image_tag @user.get_profile_image(200, 200) %>
      </h2>
      <h2><%= link_to @user.name,edit_user_path%></h2>
    </div>
  </div>
<% @posts.each do |post| %>
  <div class = "row">
    <div class = "col-12">
      <h4>タイトル</h4>
      <%= post.title %>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <div class = "image">
        <%= link_to post_path(post.id) do %>
          <%if post.images.present? %>
            <% if post.images.attached? %>
              <% post.images.each do |image| %>
                <%= image_tag image.variant(resize: '200x200') %>
              <% end %>
            <% end %>
          <% else %>
            <%= image_tag "no_images.png" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col-12">
      <%= post.content %>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <%= link_to "#{post.comments.count}コメント",post_path(post.id) %>
    </div>
  </div>
<% end %>
</div>