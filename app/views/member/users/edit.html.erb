
<div class = "container">
  <div class = "row">
    <div class = "col mt-4">
      <h2>ユーザー編集</h2>
    </div>
    <div class = "col offset-6 mt-4">
      <h4><%= link_to "退会する？",confirm_path,class: "btn btn-outline-danger" %></h4>
    </div>
  </div>
  <div class = "row">
    <div class = "col mt-2 ml-4 mr-2 mb-4 ">
      <%= image_tag @user.get_profile_image(200, 200),class: "img-thumbnail" %>
    </div>
  </div>
<%= form_with model:@user  do |f| %>
  <div class="form-group ml-4">
    <label for="formGroupExampleInput">名前</label><br>
      <%= f.text_field :name, size: "60x50" %>
  </div>
  <div class="form-group ml-4">
    <label for="formGroupExampleInput2">画像</label><br>
      <% f.label :avatar %>
      <%= f.file_field :avatar %>
  </div>
  <div class = "row">
    <div class = "col offset-9">
      <%= f.submit'ユーザ更新',class: "btn btn-outline-success"  %>
    </div>
  </div>
 <% end %>
</div>